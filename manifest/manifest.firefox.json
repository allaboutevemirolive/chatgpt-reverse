{
    "manifest_version": 3,
    "name": "ChatGPT Reverse",
    "version": "1.0.0",
    "description": "A ChatGPT extension built using a reverse-engineered REST API.",
    "icons": {
        "16": "logo_16.png",
        "48": "logo_48.png",
        "64": "logo_64.png",
        "128": "logo_128.png"
    },
    "browser_specific_settings": {
        "gecko": {
            "id": "your-addon-id@example.com"
        }
    },
    "action": {
        "default_popup": "popup/index.html",
        "default_icon": {
            "16": "logo_16.png",
            "32": "logo_32.png",
            "48": "logo_48.png"
        }
    },
    "permissions": ["storage", "cookies"],
    "host_permissions": ["https://chatgpt.com/*"],
    "background": {
        "service_worker": "background.js",
        "type": "module"
    },
    "content_security_policy": {
        "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self';"
    },
    "content_scripts": [
        {
            "matches": ["https://chatgpt.com/*"],
            "js": ["loadScript.js", "content.js"],
            "run_at": "document_start"
        }
    ],
    "web_accessible_resources": [
        {
            "resources": [
                "interceptor.js",
                "loadScript.js",
                "*.png",
                "logo.svg"
            ],
            "matches": ["https://chatgpt.com/*"]
        }
    ]
}
