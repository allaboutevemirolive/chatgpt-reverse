{
    "name": "chatgpt-reverse",
    "version": "1.0.0",
    "private": true,
    "description": "A ChatGPT extension built around reverse-engineered REST API.",
    "scripts": {
        "clean": "rimraf build",
        "build:packages": "pnpm --filter \"./packages/**\" build",
        "copy:public": "copyfiles -u 1 public/**/* build",
        "build": "pnpm run clean && pnpm run build:packages && pnpm run copy:public",
        "dev": "pnpm --parallel --filter \"./packages/**\" dev",
        "typecheck": "pnpm --filter \"./packages/**\" typecheck",
        "test": "vitest",
        "test:watch": "vitest --watch",
        "test:ui": "vitest --ui",
        "coverage": "vitest run --coverage"
    },
    "keywords": [],
    "author": "Akmal Firdaus <https://x.com/akmalfirdxus>",
    "license": "ISC",
    "devDependencies": {
        "@biomejs/biome": "^1.9.4",
        "@testing-library/jest-dom": "^6.6.3",
        "@testing-library/react": "^16.3.0",
        "@testing-library/user-event": "^14.6.1",
        "@types/chrome": "^0.0.313",
        "@types/node": "^22.14.0",
        "@vitejs/plugin-react": "^4.3.0",
        "copyfiles": "^2.4.1",
        "jsdom": "^26.0.0",
        "rimraf": "^6.0.1",
        "typescript": "^5.4.5",
        "vite": "^6.2.5",
        "vitest": "^3.1.1"
    }
}