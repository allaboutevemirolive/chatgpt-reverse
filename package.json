{
    "name": "chatgpt-reverse",
    "version": "1.0.1",
    "private": true,
    "description": "A ChatGPT extension built around reverse-engineered REST API.",
    "scripts": {
        "clean": "rimraf build dist",
        "build:packages": "pnpm --filter \"./packages/**\" build",
        "copy:assets": "copyfiles -u 1 public/*.png public/*.svg build",
        "copy:manifest": "node ./scripts/copy-manifest.mjs",
        "build:chrome": "pnpm run clean && pnpm run build:packages && pnpm run copy:assets && pnpm run copy:manifest chrome",
        "build:firefox": "pnpm run clean && pnpm run build:packages && pnpm run copy:assets && pnpm run copy:manifest firefox",
        "build": "pnpm run build:chrome",
        "package": "pnpm run package:chrome",
        "package:chrome": "pnpm run build:chrome && node ./scripts/package.mjs chrome",
        "package:firefox": "pnpm run build:firefox && node ./scripts/package.mjs firefox",
        "package:all": "pnpm run package:chrome && pnpm run package:firefox",
        "dev": "pnpm --parallel --filter \"./packages/**\" dev",
        "typecheck": "pnpm --filter \"./packages/**\" typecheck",
        "test": "vitest",
        "test:watch": "vitest --watch",
        "test:ui": "vitest --ui",
        "coverage": "vitest run --coverage"
    },
    "keywords": [],
    "author": "Akmal Firdaus <https://x.com/akmalfirdxus>",
    "license": "MIT",
    "devDependencies": {
        "@biomejs/biome": "^1.9.4",
        "@testing-library/jest-dom": "^6.6.3",
        "@testing-library/react": "^16.3.0",
        "@testing-library/user-event": "^14.6.1",
        "@types/archiver": "^6.0.2",
        "@types/chrome": "^0.0.313",
        "@types/node": "^22.14.0",
        "@vitejs/plugin-react": "^4.3.0",
        "archiver": "^7.0.1",
        "copyfiles": "^2.4.1",
        "jsdom": "^26.0.0",
        "rimraf": "^6.0.1",
        "typescript": "^5.4.5",
        "vite": "6.3.4",
        "vitest": "^3.1.1"
    },
    "dependencies": {
        "firebase": "^11.6.1",
        "react-firebase-hooks": "^5.1.1"
    }
}
